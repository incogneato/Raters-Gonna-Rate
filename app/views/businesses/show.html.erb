<div class="show_business">
	<h4><%= @business.name %></h4>
	<p>Location: <span class="location"><%= @business.location %></span></p>
	<p>Review: <span class="review"><%= @business.review %></span></p>
	<%= link_to 'Home', :root %> &nbsp; 
	<%= link_to 'Edit', edit_business_path(@business) %> &nbsp; 
	<%= link_to 'Delete', @business, method: :delete, data: { confirm: "Really delete business?" }%>
</div>

