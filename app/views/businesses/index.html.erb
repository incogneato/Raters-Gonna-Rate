<h3>All Businesses</h3>

<div>
	<% @businesses.each do |business| %>
	<ul id="businesses_list">
		<li>
			<%= link_to business.name, business %> &rarr;
			<%= business.location %> &middot; 
			<%= link_to 'Edit', edit_business_path(business) %>  &middot; 
			<%= link_to 'Delete', business, method: :delete, data: { confirm: "Really delete business?"} %> 
		</li>
	</ul>
	<% end %> <!-- end loop -->
</div>

<%= link_to 'Add New Business', new_business_path %>