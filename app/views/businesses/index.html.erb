<h1>All Businesses</h1>

<% unless @businesses.empty? %>
<div>
	<% @businesses.each do |business| %>
	<ul style="list-style: none;">
		<li>
			<%= link_to business.name, business %> &rarr;
			<%= business.location %> &nbsp; 
				<%= link_to 'Edit', edit_business_path(business) %>  &nbsp; 
				<%= link_to 'Delete', business, method: :destroy, data: { confirm: "Really delete business?"} %> 
		</li>
	</ul>
	<% end %> <!-- end loop -->
</div><% end %> <!-- end conditional -->

<%= link_to 'Add New Business', new_business_path %>